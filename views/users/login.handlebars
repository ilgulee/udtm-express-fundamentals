<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <img class="logo" src="/img/mstile-310x310.png" alt="logo">
            <h3 class="text-center">Account Login</h3>
            <form >
                <div class="form-group">
                    <label for="email">Email</label>
                    <input autocomplete="email" type="email" class="form-control" name="email" id="email" required>
                </div>
                 <div class="form-group">
                    <label for="password">password</label>
                    <input autocomplete="current-password" type="password" class="form-control" name="password" id="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>